{
  "name": "one-api-tests",
  "version": "1.0.0",
  "description": "One-API 自动化测试套件",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "test:user": "jest --testPathPattern=user --runInBand",
    "test:topic": "jest --testPathPattern=topic --runInBand",
    "test:subscription": "jest --testPathPattern=subscription --runInBand",
    "test:report": "jest --runInBand --detectOpenHandles --coverage --coverageReporters=html --coverageReporters=json --coverageDirectory=reports",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "clean": "rm -rf reports coverage",
    "setup": "npm install && cp .env.example .env"
  },
  "keywords": [
    "api",
    "testing",
    "automation",
    "jest",
    "nodejs"
  ],
  "author": "One-API Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-html-reporters": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/reports/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}

